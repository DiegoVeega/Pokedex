<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/general_matgin">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:padding="@dimen/standar_padding"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/pokemon_image"
                android:scaleType="fitXY"
                android:layout_width="@dimen/standar_width"
                android:layout_height="@dimen/standar_width" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/pokemon_name"
                android:text="super pokemon"
                android:layout_gravity="center"
                android:layout_margin="@dimen/standar_padding"
                android:textSize="@dimen/text_size_poke_standar"
                android:textStyle="bold"
                android:textColor="@color/dark_color"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>